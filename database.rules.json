{
  "rules": {
    "usernames": {
      ".read": true,
      ".indexOn": [".value"],
      "$uid": {
        ".write": "auth != null && (!data.exists() || auth.uid == $uid)"
      }
    },
    "users": {
      ".indexOn": ["membership/patreon/patronId"],
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "printers": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": false
        },
        "filaments": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": false
        },
        "presets": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": false
        }
      }
    },
    "printers": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "filaments": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "colors": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "userPrinters": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    },
    "userFilaments": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    },
    "userColors": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    },
    "orders": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    },
    "orders_archive": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": false
      }
    },
    "models": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "verificationCodes": {
      "$email": {
        ".read": false,
        ".write": true
      }
    }
  }
}
